# Next.js (used by the web app)
# - Set these in your hosting provider for production (Vercel/Netlify/etc)
# - For local dev, create a `.env.local` with these values
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
# Server-side only (recommended). If omitted, the server falls back to NEXT_PUBLIC_CONVEX_URL.
CONVEX_URL=https://your-deployment.convex.cloud

# Convex environment variables (used by Convex functions)
# Set these in the Convex dashboard or via `npx convex env set` (NOT via Next.js `.env.local`).
STRIPE_SECRET_KEY=sk_live_or_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
OPT_OUT_TOKEN_SECRET=change_this_for_opt_out_tokens
APP_BASE_URL=https://your-domain.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15555555555
RESEND_API_KEY=re_xxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=hello@your-domain.com
MESSAGE_RETENTION_HOURS=48
